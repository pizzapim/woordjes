section.content
  = button_to t('.create_new_list'), new_list_path, method: :get, class: 'center-object navigation-button'
  .list-index
    - if @lists.none?
      h3.center-text = t '.no_lists_yet'
    - @lists.each do |list|
      .card
        h3.center-text = list.title
        p.center-text #{list.t :subject}: #{list.subject}
        p.center-text #{list.t :topic1}: #{list.topic1}
        p.center-text #{list.t :topic2}: #{list.topic2}
        = button_to(t('.show_this_list'), list_path(list.id), class: 'center-object', method: :get)
        = button_to(t('.quiz_this_list'), new_quiz_path(list.id), class: 'center-object', method: :get)
