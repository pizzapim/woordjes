<%= link_to "Return to my lists", lists_path, class: 'center-text' %>
<%= link_to "Quiz this list", new_quiz_path(@list.id), class: 'center-text' %>
<%= link_to "Edit this list", edit_list_path(@list), class: 'center-text' %>
<div class="card">
  <h1 class="list-title center-text"><%= @list.title %></h1>
  <p class="center-text">Subject: <%= @list.subject %></p>
  <p class="center-text">Topic 1: <%= @list.topic1 %></p>
  <p class="center-text">Topic 2: <%= @list.topic2 %></p>
  <h3 class="center-text">Words:</h3>
  <% @list.links.each do |link| %>
    <div class="flex-container">
      <p class="flex-child center-text"><%= link.word1 %></p>
      <p class="flex-child center-text"><%= link.word2 %></p>
    </div>
  <% end %>
</div>
<h3 class="center-text">Quiz Results:</h3>
<% @list.quiz_results.each do |quiz_result| %>
  <div class="card">
    <p class="center-text">Finished at: <%= quiz_result.created_at.strftime("%d-%m-%Y %H:%M") %></p>
    <p class="center-text">Quiz type: <%= quiz_result.quiz_type %></p>
    <p class="center-text">Direction: <%= quiz_result.direction %></p>
    <p class="center-text">Percentage correctly answered: <%= ((quiz_result.correct.to_f / (quiz_result.correct + quiz_result.quiz_errors.count)) * 100).to_i %>%</p>
    <%= link_to("Show quiz result", quiz_result_url(@list.id, quiz_result.id), class: 'center-text') %>
  </div>
<% end %>
<%= button_to "Delete this list", @list, method: :delete, class: 'center-object' %>
